.blog-write
  padding 4px
  height 100%


.blog-write--control
  display grid
  grid-template-columns 1fr 1fr
  text-align center
  a   
    margin 4px 50px
    font-size 12px
    line-height 30px
    border-radius 8px
    background-color #f5f5f5
    text-decoration none
    color rgb(57, 55, 55)
    &:hover
      background-color rgb(170, 212, 240)
      color #f1f1f1