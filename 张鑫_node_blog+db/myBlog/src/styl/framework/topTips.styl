.blog-topTips--wrap
  z-index 12000
  position absolute
  top -40px;
  left 50%
  margin-left -100px
  

.blog-topTips
  padding 0 10px
  line-height 36px
  text-align center
  color red
  font-size 16px
  font-weight 700
  letter-spacing 2px
  background-color rgba(214, 206, 206, 0.5)
  border-radius 18px
  box-shadow 0 0 4px rgba(242, 242, 105, 0.5)  inset

.animate
  animation slideUp 6s ease

@keyframes slideUp {
0% {
  top -40px
}
50% {
  top 40px
}
100% {
  top -40px
}
}