/* modal start */
@font-face {
  font-family: 'iconeyes';
  src: url('../font/eyes/iconfont.woff2?t=1662343477921') format('woff2'),
       url('../font/eyes/iconfont.woff?t=1662343477921') format('woff'),
       url('../font/eyes/iconfont.ttf?t=1662343477921') format('truetype');
}

.blog-modal
  position fixed
  z-index 11000
  top 0 
  left 0
  bottom 0
  right 0
  margin auto
  background-color rgba(0,0,0,.6)

.blog-modal--wrap
  display grid
  height 100%

.modal-content
  justify-self center
  align-self center
  display grid
  grid-template-rows 60px auto 60px
  width 500px

.modal-title
  border-left 4px solid orange   
  padding-left 12px

.close
  font-size 28px
  color red

.modal-body form
  display grid
  grid-template-columns 85%
  grid-gap 5px
  justify-content center
  align-items center
  height 100%

.input-group
  display grid
  grid-template-columns 74px auto
  grid-template-rows 40px
  & :nth-child(n)
    height 100%
  .input-group-addon
    width 100%
    line-height 26px



