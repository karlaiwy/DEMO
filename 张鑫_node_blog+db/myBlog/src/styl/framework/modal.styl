.input-group input.pass
  border 2px solid green
.input-group input.refuse 
  border 2px solid red

.modal-btn 
  margin 0 5px

.modal-btn:hover
  background-color skyblue
  // margin 0 5px
  padding 0 6px
  border-radius 4px
  box-shadow -1px 1px 1px 2px  skyblue
  // border 1px solid #000

.iconeyes
  z-index 10
  font-family: "iconeyes" !important;
  position absolute
  top 8px
  right 12px 
  font-size: 18px;
  font-style: normal;
  color #ccc
  cursor pointer
