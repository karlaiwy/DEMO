.blog-head--avatar
  position relative
  display flex
  justify-content center
  align-items center
  overflow hidden
  width 50px
  height 50px
  border-radius 50%
  img
    position  absolute
    top -3px
    left 0
    width 100%
    height auto
  &:hover 
    & .blog-head--write
      transform translateX(0) translateY(15px) scale(1.5)
      color penColor
      cursor pointer
            
.blog-head--write
  position absolute
  transform translateX(-40px)
  transition .3s
  color #fff



.blog-head-menu
    align-self center
    justify-self center
    font-size 40px
    grid-column-start 4
    cursor pointer

.icon 
  position absolute
  top 68px
  left 7px
  width 1em
  height 1em
  vertical-align -0.15em
  fill currentColor
  overflow hidden
  cursor pointer
