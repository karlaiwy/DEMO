@import './_base.styl'
@import './_value.styl'
/*  head start  */
.blog-head
  display  grid
  grid-template-columns 1fr 4fr minmax(300px,2fr) 1fr
  grid-template-rows 100px
  justify-items  center
  align-items  center
  margin-bottom 40px
  padding 0 calc(100% - 90vw)
  background-color #f1f1f1

.blog-head--logo
  box-sizing border-box
  width 80px
  height 80px
  overflow hidden
  border-radius 50%
.blog-head--logo img 
  width auto
  height 80px
  overflow hidden
  border-radius 50%
  cursor pointer
  user-select none
.blog-head--nav
  width 100%
  height 100px

.blog-head--nav__wrap
  width 100%
  height 100%
  display flex
  justify-content space-around
  font-size 18px
  & li
    position relative
    height 100%
    line-height 100px
    cursor pointer
  & li:hover
    border-bottom 2px solid font-modifier-color
  & li:hover a
    color font-modifier-color

.blog-head--search
  box-sizing border-box
  padding 4px 6px
  box-shadow 0 0 3px #ccc
  border-radius 6px
.blog-input--search
  box-sizing border-box
  padding-left 16px
  outline none
  border none
  font-size 16px
  background-color #f1f1f1

.blog-head--login
  position relative
  width 100px
  height 36px
  border-radius 10px
  box-shadow 0 0 4px #222
  transition .5s
  &:hover
    transform scale(1.2)
  img
    position absolute
    top 4px
    left 4px
    width 90px
    height 30px
    overflow hidden
  .blog-btn
    position absolute
    width 100%
    height 100%
    font-size 20px
    font-weight 700
    font-family '行楷-简'
    color #000
    line-height 36px
    text-align center
    mix-blend-mode screen
    background-color #fff
    border-radius 10px

.blog-head--login.login
  width 50px
  height 50px
  border-radius 50%
  overflow hidden
  

