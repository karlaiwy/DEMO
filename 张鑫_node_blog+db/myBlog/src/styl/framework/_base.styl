/*base start*/
@import './_value.styl'
html 
  font-family: Georgia, 'Times New Roman', Times, serif, "Microsoft yahei";
  color: #222;
  color: rgb(234, 162, 210)
  height 100%
body
  background-image linear-gradient(to bottom right, rgb(242,242,242), rgb(148,148,148), rgb(242,242,242));
a 
  color: gray;
  cursor pointer

a:hover 
  color: gray;
  cursor: pointer;
  text-decoration: none;

a:visited
  text-decoration none

// img 
//   width: 100%;

ul 
  list-style: none;
  margin: 0;
  padding: 0;

h1 
  margin: 0;

::placeholder 
  color: gray
  font-weight 400


[class^="ico"]{
  font-size 20px
}

.blog-line--col 
  position relative
  &::after
    position absolute
    right 0
    top 0
    bottom 0
    margin auto
    content ''
    width 1px 
    height 80%
    background-color line-theme-color
    transform scaleX(.5)

.blog-line--col 
  position relative
  &::before
    position absolute
    right 0
    top 0
    bottom 0
    margin auto
    content ''
    width 1px 
    height 80%
    background-color rgb(158, 145, 145)
    transform scaleX(.5)

.blog-line--row 
  position relative
  &::before
    position absolute
    right 0
    bottom -5px
    margin auto
    content ''
    width 100% 
    height 1px
    background-color rgb(158, 145, 145)
    transform scaleY(.5)

.glyphicon-search
  font-size 20px
  top 3px
  transition .5s
  &:hover
    transform scale(1.4)

.glyphicon-time
  // top 2px
  left -2px

.w-e-text-container 
  height 500px !important

.weight
  font-weight 700

.blog-modal
  z-index 11000

.blog-wrap
  z-index 999
/*base end*/