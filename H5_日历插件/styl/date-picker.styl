$week-color = #FF851B

*
  margin 0
  padding 0
input
  text-align: center
body
  overflow: hidden
  width: 100vw
  height: 100%
.calender-page
  position: fixed
  top: 0
  bottom: 0
  right: 0
  left: 0
  display: flex
  flex-wrap: wrap
  flex-direction: column
  justify-content: space-between
  width: 100vw
  height: 100vh
  background-color: #fff
  transform: translateX(100vw) translateZ(0)
  transition: .3s ease-in
  &.show
    transform: translateX(0vw) translateZ(0)
  .head
    display: flex
    flex-wrap: wrap
    justify-content: space-around
    width 100%
    height 40px
    font-size: 16px
    line-height: 40px
    background-color #ccc
    span 
      width  14.2857143%
      text-align: center
    span.weekend
      color: $week-color

.month-data
  overflow-y: auto 
  flex: 1
  
  .month-data-item
    margin: 15px 0
    
    header
      display: flex
      flex-wrap: wrap
      justify-content: center
      align-items: center
      &::before,
      &::after
        content: ''
        display: block
        width: 60px
        height: 1px
        transform: scaleY(.5)
        background-color: #ccc
      h4
        width: 100px
        height: 80px
        padding: 0 .8em
        text-align: center
        font-size: 18px
        line-height: 80px
      

ul 
  counter-reset: add
  list-style: none
  display: flex
  flex-wrap: wrap
  align-items: center
  align-content: space-around
  li 
    width 14.2857143%
    height 50px
    font-size: 16px
    line-height: 50px
    // font-weight: 700
    text-align: center
  li:not(:first-child):after
    content: counter(add)
    counter-increment: add
  li.today::after 
    content: ''

  li.empty-0 ~:nth-child(2)
    color: $week-color
  for i in (0..6)
    li.empty-{i}
      width: 14.2857143% * i
      ~:nth-child(7n + {8 - i}),
      ~:nth-child(7n + {9 - i})
        color: $week-color

  li.disabled
    color: #ccc !important
  li.today 
    color: rgb(237, 204, 14)
    font-size 20px
    &::before
      content: '今天'
  li.selected 
    color: #fff
    background-color rgb(28, 190, 244)
    border-radius: 50%

